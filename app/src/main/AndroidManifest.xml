<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.raf.studenthelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.SetupApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.view.activities.UpdateNoteActivity"></activity>
        <activity android:name=".presentation.view.activities.NewNoteActivity" />
        <activity android:name=".presentation.view.activities.NoteActivity" />
        <activity
            android:name=".presentation.view.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.view.activities.LoginActivity" />
        <activity android:name=".presentation.view.activities.ClassScheduleActivity" />
        <activity android:name=".presentation.view.activities.MainActivity" />
    </application>

</manifest>